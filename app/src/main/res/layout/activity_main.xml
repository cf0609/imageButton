<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"
            />
        <ImageButton
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"
            />
        <ImageButton
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="image"
            android:drawableTop="@drawable/abc_btn_rating_star_off_mtrl_alpha"
            android:layout_weight="2"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="image2"
            android:layout_weight="1"
            android:drawableBottom="@drawable/abc_btn_rating_star_off_mtrl_alpha"
            android:drawableTop="@drawable/abc_btn_rating_star_off_mtrl_alpha"
            android:drawableLeft="@drawable/abc_btn_rating_star_off_mtrl_alpha"
            android:drawableRight="@drawable/abc_btn_rating_star_off_mtrl_alpha"

            />

    </LinearLayout>
</LinearLayout>
